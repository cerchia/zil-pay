{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "popup/**/*",
    "core/**/*",
    "lib/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*", "dist"],
  "compilerOptions": {
    "rootDir": ".",
    "paths": {
      "app/*": ["popup/*"],
      "background/*": ["core/background/*"],
      "content/*": ["core/content/*"],
      "inpage/*": ["core/inpage/*"],
      "config/*": ["config/*"],
      "lib/*": ["lib/*"],
      "types/*": ["types/*"],
    },
    "baseUrl": ".",
    "isolatedModules": false
  },
  "types": [
    "chrome"
  ]
}
